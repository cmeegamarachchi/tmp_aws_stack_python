{
  "name": "AWS Stack - Full Stack Development Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [
  ],
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:1": {}
  },  
  "customizations": {
    "vscode": {
      "settings": {
        "prettier.printWidth": 120,
        "terminal.integrated.shell.linux": "/bin/bash",
        "[typescript]": {
          "editor.formatOnSave": true
        },
        "[javascript]": {
          "editor.formatOnSave": true
        },
        "[json]": {
          "editor.formatOnSave": true
        },
        "workbench.iconTheme": "material-icon-theme"
      },
      "extensions": [
        "PKief.material-icon-theme",
        "GitHub.copilot",
        "humao.rest-client",
        "hashicorp.terraform",
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "amazonwebservices.aws-toolkit-vscode",
        "ms-vscode.vscode-json"
      ]
    }
  },
"mounts": [], 
"runArgs": ["--privileged"], // required for Docker-in-Docker
  "remoteUser": "vscode",
  "initializeCommand": "sudo bash .devcontainer/setup.sh",
  "postStartCommand": "echo 'Development environment ready! Versions:' && node --version && npm --version && aws --version && terraform --version"
}