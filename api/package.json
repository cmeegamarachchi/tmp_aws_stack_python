{
  "name": "contacts-api",
  "version": "1.0.0",
  "description": "Contacts API built with TypeScript and AWS Lambda",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "package": "npm run clean && npm run build && zip -r function.zip dist node_modules",
    "test": "jest"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.5",
    "jest": "^29.6.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
